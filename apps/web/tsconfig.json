{
    "include": ["src", "server.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "noEmit": true,
        "incremental": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "types": ["node"]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}